{
  "name": "runcheck",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "frontend",
    "backend",
    "infra"
  ],
  "scripts": {
    "dev": "run-p dev:frontend dev:backend",
    "dev:frontend": "npm run dev -w frontend",
    "dev:backend": "npm run start:dev -w backend",
    "build:frontend": "npm run build -w frontend",
    "build:backend": "npm run build -w backend",
    "lint:frontend": "npm run lint -w frontend",
    "lint:backend": "npm run lint -w backend",
    "test:frontend": "npm run test:unit -w frontend",
    "test:backend": "npm run test -w backend",
    "deploy:infra": "npm run -w infra cdk -- deploy --all",
    "diff:infra": "npm run -w infra cdk -- diff --all",
    "synth:infra": "npm run -w infra cdk -- synth --all"
  }
}
